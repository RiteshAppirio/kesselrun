<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.ionicframework.starter" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>KesselRun</name>
  <description>
        SFDC Offline Poc in Ionic
    </description>
  <author email="kbowerma@topcoder.com" href="https://github.com/kbowerma/kesselrun">
      topcoder developer
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="https://*.salesforce.com"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="android-minSdkVersion" value="19"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <preference name="orientation" value="default"/>
  <feature name="StatusBar">
    <param name="ios-package" onload="true" value="CDVStatusBar"/>
  </feature>
  <platform name="ios">
    <icon src="resources/icon/appicon57x57.png" width="57" height="57"/>
    <icon src="resources/icon/appicon114x114.png" width="114" height="114"/>
    <icon src="resources/icon/appicon40x40.png" width="40" height="40"/>
    <icon src="resources/icon/appicon80x80.png" width="80" height="80"/>
    <icon src="resources/icon/appicon50x50.png" width="50" height="50"/>
    <icon src="resources/icon/appicon100x100.png" width="100" height="100"/>
    <icon src="resources/icon/appicon120x120.png" width="120" height="120"/>
    <icon src="resources/icon/appicon180x180.png" width="180" height="180"/>
    <icon src="resources/icon/appicon72x72.png" width="72" height="72"/>
    <icon src="resources/icon/appicon144x144.png" width="144" height="144"/>
    <icon src="resources/icon/appicon76x76.png" width="76" height="76"/>
    <icon src="resources/icon/appicon152x152.png" width="152" height="152"/>
    <icon src="resources/icon/appicon29x29.png" width="29" height="29"/>
    <icon src="resources/icon/appicon58x58.png" width="58" height="58"/>
    <icon src="resources/icon/appicon87x87.png" width="87" height="87"/>
    <splash src="resources/splash/Default640x1136.png" height="1136" width="640"/>
    <splash src="resources/splash/Default1242x2208.png" height="2208" width="1242"/>
    <splash src="resources/splash/Default2208x1242.png" height="1242" width="2208"/>
    <splash src="resources/splash/Default640x960.png" height="960" width="640"/>
  </platform>
  <platform name="android">
    <icon density="ldpi" src="resources/icon/appicon40x40.png"/>
    <icon density="mdpi" src="resources/icon/appicon50x50.png"/>
    <icon density="hdpi" src="resources/icon/appicon72x72.png"/>
    <icon density="xhdpi" src="resources/icon/appicon100x100.png"/>
    <icon density="xxhdpi" src="resources/icon/appicon144x144.png"/>
    <icon density="xxxhdpi" src="resources/icon/appicon180x180.png"/>
    <splash density="land-xhdpi" src="resources/splash/Default640x1136.png"/>
    <splash density="land-xxxhdpi" src="resources/splash/Default1242x2208.png"/>
    <splash density="port-xxxhdpi" src="resources/splash/Default2208x1242.png"/>
  </platform>
</widget>
